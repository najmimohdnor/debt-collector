<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Debt_Collector.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Debt_Collector"
    Shell.FlyoutBehavior="Flyout"
    Title="Debt_Collector">

    <!-- Flyout Menu -->
    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="About" Icon="about_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:About}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Help" Icon="help_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:Help}" />
    </FlyoutItem>

</Shell>
